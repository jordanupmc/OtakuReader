<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/frag_favoris">

    <include
        android:id="@+id/mangaListLayout"
        layout="@layout/fragment_manga_list"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/noContent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="220sp"
            android:layout_height="100sp"
            android:background="@drawable/corbeau" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:gravity="center"
            android:textSize="28sp"
            android:text="No Content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:gravity="center"
            android:text="Add a manga to your favorites it will show up here" />
    </LinearLayout>
</LinearLayout>
